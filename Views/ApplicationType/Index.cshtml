@model IEnumerable<Rocky.Models.ApplicationType>
@{
    ViewData["Title"] = "List ApplicationType";
}

<article class="container">
    <div class="row" style="align-items:center;">
        <div class="col-6 my-4">
            <h2 class="display-3">Application Type</h2>
        </div>
        <div class="col-6 my-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Add application type
            </a>
        </div>
    </div>
   @if (Model.Any())
    {
    <table class="table table-striped table-bordered mt-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var at in Model)
             {
                <tr>
                    <th scope="row">@i</th>
                    <td>@at.Name</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="actions on application type">
                            <a asp-action="Edit" asp-route-id="@at.Id" class="btn btn-outline-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@at.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                i++;
             }
        </tbody>
    </table>
    }
    else
    { 
    <div class="card">
        <p class="card-body">There is no elements found</p>
    </div>
    }
</article>






