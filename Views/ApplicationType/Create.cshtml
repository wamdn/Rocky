@model Rocky.Models.ApplicationType
@{
    ViewData["Title"] = "Create Application Type";
}

<div class="container">
    <form class="border p-3" method="post" asp-action="Create">
        <div class="form-group row ">
            <h2 class="text-info pl-3">Add application type</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-share-square"></i>
                                Create
                            </button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-100">
                                <i class="fas fa-undo"></i>
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}