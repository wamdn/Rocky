@model IEnumerable<Product>
@{ 
    ViewData["Title"] = "Product list";
    string controller = "Product";
}

<div class="container">
    <div class="row" style="align-items:center;">
        <div class="col-6 my-4">
            <h2 class="display-3">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 my-4 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Add @controller
            </a>
        </div>
    </div>
    @if (Model.Any())
    {
        <table class="table table-striped table-bordered mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 1;}
                @foreach (Product p in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@p.Name</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="actions on Product">
                                <a asp-action="Upsert" asp-route-id="@p.Id" class="btn btn-outline-info">Edit</a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                There is no Product.
            </div>
        </div>
    }
</div>
